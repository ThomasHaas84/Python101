
# Binärumwandler 101

import locale
locale.setlocale(locale.LC_ALL, 'de')


def binaer_umwandler():
    print()
    print(" --- Binär zu Dezimal-Konverter ---")
    print()
    a = input("Binärzahl eingeben: ")
    dezimal_output = 0
    if a.__contains__("2"):
        print("Das ist keine Binärzahl!")
        return
    if a.__contains__("3"):
        print("Das ist keine Binärzahl!")
        return
    if a.__contains__("4"):
        print("Das ist keine Binärzahl!")
        return
    if a.__contains__("5"):
        print("Das ist keine Binärzahl!")
        return
    if a.__contains__("6"):
        print("Das ist keine Binärzahl!")
        return
