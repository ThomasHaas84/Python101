        print("Das ist keine Binärzahl!")
        return
    if a.__contains__("8"):
        print("Das ist keine Binärzahl!")
        return
    if a.__contains__("9"):
        print("Das ist keine Binärzahl!")
        return
    try:
        int(a)
    except:
        print("Das ist keine Binärzahl!")
